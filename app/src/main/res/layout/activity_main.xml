<!--                    app:layout_constraintStart_toStartOf="@+id/circular_progress2"-->
<!--                    app:layout_constraintTop_toTopOf="@+id/circular_progress2" />-->

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Battery"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/circular_progress"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="@+id/circular_progress"
                    app:layout_constraintTop_toBottomOf="@+id/battery" />

<!--                <TextView-->
<!--                    android:id="@+id/textView"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:gravity="center"-->
<!--                    android:text="RAM"-->
